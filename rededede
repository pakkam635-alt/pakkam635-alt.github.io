    // -----------------------------
    // Helpers
    // -----------------------------
    const $ = (sel, el=document) => el.querySelector(sel);
    const $$ = (sel, el=document) => Array.from(el.querySelectorAll(sel));
    const rand = (arr) => arr[Math.floor(Math.random()*arr.length)];
    const clamp = (v, a, b) => Math.max(a, Math.min(b, v));

    function makeChips(target, labels){
      target.innerHTML = "";
      labels.forEach((txt, i) => {
        const d = document.createElement("span");
        d.className = "chip";
        d.innerHTML = `<i aria-hidden="true"></i>${txt}`;
        target.appendChild(d);
      });
    }

    // SVG “photo” generator for offline gallery
    function makeShotDataURI(seed){
      // deterministically-ish shift based on seed
      const hueA = (210 + seed*37) % 360;
      const hueB = (280 + seed*29) % 360;
      const hueC = (155 + seed*41) % 360;

      const svg = `
      <svg xmlns="http://www.w3.org/2000/svg" width="1600" height="1000" viewBox="0 0 1600 1000">
        <defs>
          <linearGradient id="g1" x1="0" x2="0" y1="0" y2="1">
            <stop offset="0" stop-color="hsl(${hueA} 70% 12%)"/>
            <stop offset="1" stop-color="hsl(${hueA} 70% 18%)"/>
          </linearGradient>
          <radialGradient id="glow" cx="70%" cy="20%" r="60%">
            <stop offset="0" stop-color="hsla(${hueB}, 80%, 70%, .35)"/>
            <stop offset="1" stop-color="hsla(${hueB}, 80%, 60%, 0)"/>
          </radialGradient>
          <linearGradient id="ice" x1="0" x2="1" y1="0" y2="1">
            <stop offset="0" stop-color="hsla(${hueC}, 90%, 85%, .92)"/>
            <stop offset="1" stop-color="hsla(${hueC}, 90%, 96%, .55)"/>
          </linearGradient>
          <filter id="n">
            <feTurbulence type="fractalNoise" baseFrequency=".9" numOctaves="3" stitchTiles="stitch"/>
            <feColorMatrix type="saturate" values="0.4"/>
            <feComponentTransfer>
              <feFuncA type="table" tableValues="0 0.12"/>
            </feComponentTransfer>
          </filter>
        </defs>
        <rect width="1600" height="1000" fill="url(#g1)"/>
        <rect width="1600" height="1000" fill="url(#glow)"/>
        <path d="M0 780 C240 650 420 740 620 610 C820 480 980 520 1120 610 C1260 700 1400 640 1600 720 L1600 1000 L0 1000 Z"
              fill="hsla(${hueA}, 70%, 9%, .85)"/>
        <path d="M140 860 L610 360 L820 610 L980 430 L1400 880 Z"
              fill="hsla(${hueA}, 80%, 16%, .98)"/>
        <path d="M610 360 L720 520 L820 610 L760 520 Z"
              fill="hsla(${hueA}, 85%, 22%, .95)"/>
        <path d="M980 430 L1100 590 L1400 880 L1220 560 Z"
              fill="hsla(${hueA}, 85%, 22%, .92)"/>
        <path d="M610 360 L720 520 L760 520 L690 430 Z" fill="url(#ice)" opacity=".75"/>
        <path d="M980 430 L1220 560 L1100 590 L1040 510 Z" fill="url(#ice)" opacity=".70"/>
        <path d="M220 920 C380 840 520 860 690 920 C860 980 1040 960 1180 900 C1320 850 1460 850 1600 920 L1600 1000 L220 1000 Z"
              fill="hsla(${hueA}, 65%, 7%, .90)"/>
        <rect width="1600" height="1000" filter="url(#n)" opacity=".35"/>
      </svg>`.trim();

      return "data:image/svg+xml;charset=utf-8," + encodeURIComponent(svg);
    }

    // -----------------------------
    // Build UI
    // -----------------------------
    const state = {
      ambient: true,
      pinned: new Set(),
      shots: []
    };

    function buildTagChips(){
      const tags = new Set();
      while(tags.size < 7) tags.add(rand(POOL.tags));
      makeChips($("#tagChips"), [...tags]);
    }

    function buildOverview(){
      const a = rand(POOL.overviewA);
      const b = rand(POOL.overviewB);
      $("#ov1Title").textContent = a.t;
      $("#ov1Body").textContent = a.b;
      $("#ov2Title").textContent = b.t;
      $("#ov2Body").textContent = b.b;

      makeChips($("#ov1Chips"), rand(POOL.ovChipsA));
      makeChips($("#ov2Chips"), rand(POOL.ovChipsB));
    }

    function buildGallery(){
      const grid = $("#galleryGrid");
      grid.innerHTML = "";

      state.shots = Array.from({length: 6}).map((_, i) => {
        const seed = Math.floor(Math.random()*999) + i*11;
        const caption = rand(POOL.captions);
        return {
          id: "shot-" + i,
          seed,
          title: rand(POOL.scenes),
          caption,
          mood: rand(POOL.feelings),
          detail: rand(POOL.details),
          src: makeShotDataURI(seed)
        };
      });

      state.shots.forEach((s, idx) => {
        const d = document.createElement("div");
        d.className = "shot reveal";
        d.dataset.idx = idx;
        d.innerHTML = `
          <img alt="${s.title}" src="${s.src}">
          <div class="cap">
            <div>
              <b>${s.title}</b>
              <span>${s.caption}</span>
            </div>
            <span class="meta">Tap</span>
          </div>
        `;
        d.addEventListener("click", () => openModal(idx));
        grid.appendChild(d);
      });
    }

    function buildTimeline(){
      const list = $("#timelineList");
      list.innerHTML = "";
      const picks = [...POOL.timeline].sort(() => Math.random() - 0.5).slice(0, 5);
      picks.forEach((e) => {
        const row = document.createElement("div");
        row.className = "event reveal";
        row.innerHTML = `
          <div class="stamp" aria-hidden="true"></div>
          <div>
            <b>${e.title}</b>
            <p>${e.body}</p>
          </div>
        `;
        list.appendChild(row);
      });
    }

    function buildFacts(){
      const grid = $("#factsGrid");
      grid.innerHTML = "";
      const picks = [...POOL.facts].sort(() => Math.random() - 0.5).slice(0, 4);

      picks.forEach((f, i) => {
        const card = document.createElement("article");
        card.className = "card reveal";
        card.dataset.fact = i;
        card.innerHTML = `
          <div class="pad">
            <h4>${f.t}</h4>
            <p class="muted">${f.b}</p>
            <div class="chips" style="margin-top:10px;">
              <span class="chip"><i aria-hidden="true"></i>${rand(POOL.tags)}</span>
              <span class="chip"><i aria-hidden="true"></i>${rand(POOL.tags)}</span>
              <span class="chip"><i aria-hidden="true"></i>${rand(POOL.tags)}</span>
            </div>
            <p class="meta" style="margin-top:12px;">Click to pin</p>
          </div>
        `;
        card.addEventListener("click", () => togglePin(card, i));
        grid.appendChild(card);
      });
    }

    function togglePin(card, i){
      const key = "fact-" + i;
      if(state.pinned.has(key)){
        state.pinned.delete(key);
        card.style.borderColor = "rgba(255,255,255,.10)";
        card.style.background = "linear-gradient(180deg, rgba(255,255,255,.07), rgba(255,255,255,.03))";
        showToast("Unpinned", "Card returned to normal glow.");
      }else{
        state.pinned.add(key);
        card.style.borderColor = "rgba(52,211,153,.32)";
        card.style.background = "linear-gradient(180deg, rgba(52,211,153,.14), rgba(255,255,255,.03))";
        showToast("Pinned", "This card is now highlighted.");
      }
    }

    function setHero(){
      $("#kickerText").textContent = rand(POOL.kicker);
      $("#heroTitle").textContent = rand(POOL.heroTitle);
      $("#heroDesc").textContent = rand(POOL.heroDesc);

      // quick stat flavor changes
      const a = ["8,611 m", "28,251 ft", "High 8000s", "Thin-air zone"];
      const b = ["Karakoram", "Glacier country", "Borderland peaks", "Granite + ice"];
      const c = ["Austere", "Technical", "Weather-led", "Unforgiving"];
      $("#statA").textContent = rand(a);
      $("#statB").textContent = rand(b);
      $("#statC").textContent = rand(c);
    }

    function shuffleAll(){
      setHero();
      buildTagChips();
      buildOverview();
      buildGallery();
      buildTimeline();
      buildFacts();

      // update timestamp
      const now = new Date();
      $("#lastShuffle").textContent = "Last shuffle: " + now.toLocaleString();

      // refresh reveal observer targets
      observeReveals();
      kickWeatherWidget();
      // gentle scroll nudge
      window.scrollTo({ top: 0, behavior: "smooth" });
    }

    // -----------------------------
    // Modal interactions
    // -----------------------------
    const modal = $("#modal");
    const modalClose = $("#modalClose");

    function openModal(idx){
      const s = state.shots[idx];
      $("#modalTitle").textContent = "Gallery • " + s.title;
      $("#modalMeta").textContent = "seed " + s.seed;
      $("#modalImg").src = s.src;
      $("#modalH").textContent = s.title;
      $("#modalP").textContent = s.caption + " — A small UI moment: modal motion + glass + crisp type.";
      $("#kv1").textContent = s.title;
      $("#kv2").textContent = s.mood;
      $("#kv3").textContent = "Transitions + focus";
      $("#kv4").textContent = s.detail;

      makeChips($("#modalChips"), [rand(POOL.tags), rand(POOL.tags), rand(POOL.tags), rand(POOL.tags)]);
      modal.classList.add("show");
      document.body.style.overflow = "hidden";
    }

    function closeModal(){
      modal.classList.remove("show");
      document.body.style.overflow = "";
    }

    modalClose.addEventListener("click", closeModal);
    modal.addEventListener("click", (e) => {
      if(e.target === modal) closeModal();
    });
    window.addEventListener("keydown", (e) => {
      if(e.key === "Escape" && modal.classList.contains("show")) closeModal();
    });

    // -----------------------------
    // Reveal on scroll
    // -----------------------------
    let revealObserver;
    function observeReveals(){
      if(revealObserver) revealObserver.disconnect();

      const items = $$(".reveal");
      revealObserver = new IntersectionObserver((entries) => {
        for(const ent of entries){
          if(ent.isIntersecting){
            ent.target.classList.add("in");
            revealObserver.unobserve(ent.target);
          }
        }
      }, { threshold: 0.12 });

      items.forEach((el) => {
        el.classList.remove("in");
        revealObserver.observe(el);
      });
    }

    // -----------------------------
    // Parallax + ambient widget
    // -----------------------------
    const parallaxHero = $("#parallaxHero");
    let raf = null;

    function onMove(e){
      if(!state.ambient) return;
      const r = parallaxHero.getBoundingClientRect();
      const x = (e.clientX - r.left) / r.width;
      const y = (e.clientY - r.top) / r.height;
      const tx = (x - 0.5) * 10;
      const ty = (y - 0.5) * 10;

      if(raf) cancelAnimationFrame(raf);
      raf = requestAnimationFrame(() => {
        parallaxHero.style.transform = `translate(${tx}px, ${ty}px)`;
      });
    }
    function onLeave(){
      parallaxHero.style.transform = `translate(0px, 0px)`;
    }
    parallaxHero.addEventListener("mousemove", onMove);
    parallaxHero.addEventListener("mouseleave", onLeave);

    let weatherTimer = null;
    function kickWeatherWidget(){
      if(weatherTimer) clearInterval(weatherTimer);
      const bar = $("#npBar");
      const meta = $("#npMeta");
      const left = $("#npLeft");
      const right = $("#npRight");

      const vis = ["Visibility: “knife-edge”", "Visibility: “milk glass”", "Visibility: “clear-ish”", "Visibility: “white room”"];
      const temp = ["Temp: “bruised cold”", "Temp: “metal cold”", "Temp: “dry biting”", "Temp: “stop-and-breathe”"];
      const gust = ["gusts building…", "wind easing…", "spindrift dancing…", "pressure rising…"];

      let v = Math.floor(Math.random()*60) + 20;
      bar.style.width = v + "%";
      meta.textContent = rand(gust);
      left.textContent = rand(vis);
      right.textContent = rand(temp);

      if(!state.ambient) return;

      weatherTimer = setInterval(() => {
        v += (Math.random() - 0.5) * 22;
        v = clamp(v, 8, 96);
        bar.style.width = v.toFixed(0) + "%";
        if(Math.random() < 0.35) meta.textContent = rand(gust);
        if(Math.random() < 0.20) left.textContent = rand(vis);
        if(Math.random() < 0.20) right.textContent = rand(temp);
      }, 1400);
    }

    // -----------------------------
    // Toast
    // -----------------------------
    const toast = $("#toast");
    let toastTimer = null;

    function showToast(title, msg){
      $("#toastTitle").textContent = title;
      $("#toastMsg").textContent = msg;
      toast.classList.add("show");
      if(toastTimer) clearTimeout(toastTimer);
      toastTimer = setTimeout(() => toast.classList.remove("show"), 3200);
    }
    $("#toastHideBtn").addEventListener("click", () => toast.classList.remove("show"));

    // -----------------------------
    // Buttons
    // -----------------------------
    $("#randomizeBtn").addEventListener("click", () => {
      shuffleAll();
      showToast("Shuffled", "Content remixed. Scroll for fresh cards & captions.");
    });

    $("#ambientBtn").addEventListener("click", () => {
      state.ambient = !state.ambient;
      $("#ambientState").textContent = state.ambient ? "On" : "Off";
      if(!state.ambient){
        parallaxHero.style.transform = "translate(0px, 0px)";
        if(weatherTimer) clearInterval(weatherTimer);
        showToast("Ambient motion off", "Reduced motion: parallax + widget animation paused.");
      }else{
        kickWeatherWidget();
        showToast("Ambient motion on", "Parallax + widget animation resumed.");
      }
    });

    $("#copyBtn").addEventListener("click", async () => {
      const text = rand(POOL.captions) + " — K2";
      try{
        await navigator.clipboard.writeText(text);
        showToast("Copied", "“" + text + "”");
      }catch(err){
        // fallback
        const ta = document.createElement("textarea");
        ta.value = text;
        document.body.appendChild(ta);
        ta.select();
        document.execCommand("copy");
        ta.remove();
        showToast("Copied", "“" + text + "”");
      }
    });

    // Smooth scrolling for internal anchors
    $$(".nav a.pill").forEach(a => {
      a.addEventListener("click", (e) => {
        e.preventDefault();
        const id = a.getAttribute("href");
        const target = document.querySelector(id);
        if(target) target.scrollIntoView({ behavior: "smooth", block: "start" });
      });
    });

    // initial build
    setHero();
    buildTagChips();
    buildOverview();
    buildGallery();
    buildTimeline();
    buildFacts();
    observeReveals();
    kickWeatherWidget();

    // show a first-run tip toast
    setTimeout(() => {
      showToast("Tip", "Try “Shuffle”, open a gallery shot, and hover the hero for parallax.");
    }, 900);

    // update the timestamp in footer-ish spot
    $("#lastShuffle").textContent = "Loaded: " + new Date().toLocaleString();
  </script>
</body>
</html>
